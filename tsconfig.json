{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
